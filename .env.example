
# LoquiLex Environment Example
# Use LX_* variables for configuration. GF_* is deprecated but still supported as fallback (will log a deprecation warning until v0.3.0).

LX_ASR_LANGUAGE=en
LX_ASR_MODEL=small.en
LX_ASR_COMPUTE=float16
LX_ASR_BEAM=1
LX_ASR_VAD=true
LX_ASR_NO_SPEECH=0.6
LX_ASR_LOGPROB=-1.0
LX_ASR_COND_PREV=false
LX_ASR_SAMPLE_RATE=16000
LX_ASR_CPU_THREADS=2
LX_ASR_WORD_TS=false

LX_PAUSE_FLUSH_SEC=0.7
LX_SEGMENT_MAX_SEC=7.0
LX_PARTIAL_DEBOUNCE_MS=250

LX_NLLB_MODEL=facebook/nllb-200-distilled-600M
LX_M2M_MODEL=facebook/m2m100_418M
LX_MT_BEAMS=1
LX_MT_NO_REPEAT=2
LX_MT_MAX_INPUT=96
LX_MT_MAX_NEW=96

LX_OUT_DIR=loquilex/out
LX_DEVICE=auto
LX_DECODE_INTERVAL_SEC=0.25
LX_PARTIAL_DEBOUNCE_SEC=0.25
LX_MAX_BUFFER_SEC=8.0
LX_MAX_LINES=1000
LX_PARTIAL_WORD_CAP=0
LX_SAVE_AUDIO=off
LX_SAVE_AUDIO_PATH=loquilex/out/session.wav

# Migration note: GF_* is deprecated; use LX_* going forward. See README for mapping table.
